# network <- http <- source (client)
# Write to http/source, read from source/http

property target "http"
property newSourceOutputRef ${nuklei:newReferenceId()} # external scope

connect nukleus://streams/${target}
    option source "source"
    option route ${newSourceOutputRef}
    option window 8192
    option transmission "duplex"
connected

write extension [0x00] [0x07] ":scheme" [0x0x] "http"
write extension [0x00] [0x07] ":method" [0x03] "GET"
write extension [0x00] [0x05] ":path" [0x01] "/"
write extension [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

read extension [0x00] [0x07] ":status" [0x03] "200"
read flush
