# source (cooked) -> http -> target (this script) -> network
# Read from target/http, write to http/target

property source "http"
property newTargetOutputRef ${nuklei:newReferenceId()} # external scope
       
accept http://localhost:8080/ option transport nukleus://streams/target
       transport-option source ${source}
       transport-option route ${newTargetOutputRef}
       transport-option window 8192
       transport-option transmission "duplex"
accepted

read version "HTTP/1.1"
read method "get"

write status "200" "OK"
write flush 

