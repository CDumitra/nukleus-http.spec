property newSourceOutputRef ${nuklei:newReferenceId()} # external scope

property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceOutput ${nuklei.streams("http", "source")}
property sourceInputEst ${nuklei.streams("source", "http#target")}

property newSourceOutputId1 ${nuklei:newStreamId()}
property newSourceCorrelationId1 ${nuklei:newCorrelationId()}
property newSourceOutputId2 ${nuklei:newStreamId()}
property newSourceCorrelationId2 ${nuklei:newCorrelationId()}

connect await ROUTED_OUTPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(sourceOutput.throttle)}
        option agrona:writer ${agrona:oneToOneWriter(sourceOutput.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newSourceOutputId1}
write ${newSourceOutputRef}
write ${newSourceCorrelationId1}
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x05] ":path" [0x09] "/request1"
write [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceOutputId1}
read [0..4]

write [0x00 0x00 0x00 0x03]
write ${newSourceOutputId1}
write flush

write [0x00 0x00 0x00 0x01]
write ${newSourceOutputId2}
write ${newSourceOutputRef}
write ${newSourceCorrelationId2}
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x05] ":path" [0x09] "/request2"
write [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceOutputId2}
read [0..4]

write [0x00 0x00 0x00 0x03]
write ${newSourceOutputId2}
write flush

close
closed


connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(sourceInputEst.buffer)}
        option agrona:writer ${agrona:oneToOneWriter(sourceInputEst.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceInputEstId1)
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newSourceCorrelationId1}
read [0x00] [0x07] ":status" [0x03] "200"
read [0x00] [0x0e] "content-length" [0x01] "8"

write [0x40 0x00 0x00 0x02]
write ${sourceInputEstId1}
write [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceInputEstId1}
read [0x00 0x08]
read "request1"

write [0x40 0x00 0x00 0x02]
write ${sourceInputEstId1}
write [0x08 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x03]
read ${sourceInputEstId1}

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceInputEstId2)
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newSourceCorrelationId2}
read [0x00] [0x07] ":status" [0x03] "200"
read [0x00] [0x0e] "content-length" [0x01] "8"

write [0x40 0x00 0x00 0x02]
write ${sourceInputEstId2}
write [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceInputEstId2}
read [0x00 0x08]
read "request2"

write [0x40 0x00 0x00 0x02]
write ${sourceInputEstId2}
write [0x08 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x03]
read ${sourceInputEstId2}

close
closed
