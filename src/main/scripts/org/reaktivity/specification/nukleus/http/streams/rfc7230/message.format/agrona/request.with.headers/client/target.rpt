property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property newTargetOutput ${nuklei.streams("target", "http#source")}
property targetInputEst ${nuklei.streams("http", "target")}

property newTargetInputEstId ${nuklei:newStreamId()}

connect await ROUTED_OUTPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(newTargetOutput.buffer)}
        option agrona:writer ${agrona:oneToOneWriter(newTargetOutput.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:newTargetOutputId)
read ([0..8]:newTargetOutputRef)
read ([0..8]:newTargetCorrelationId)

read notify HTTP_CONNECTION_POOL_OPENED

write [0x40 0x00 0x00 0x02]
write ${newTargetOutputId}
write [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${newTargetOutputId}
read [0x00 0x3e]
read "GET / HTTP/1.1\r\n"
read "Host: localhost:8080\r\n"
read "Custom-Header: value\r\n"
read "\r\n"

read notify HTTP_REQUEST_DECODED

close
closed


connect await HTTP_CONNECTION_POOL_OPENED
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(targetInputEst.throttle)}
        option agrona:writer ${agrona:oneToOneWriter(targetInputEst.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newTargetInputEstId}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${newTargetCorrelationId}
write flush

read [0x40 0x00 0x00 0x02]
read ${newTargetInputEstId}
read [0..4]

write await HTTP_REQUEST_DECODED

write [0x00 0x00 0x00 0x02]
write ${newTargetInputEstId}
write [0x00 0x13]
write "HTTP/1.1 200 OK\r\n"
write "\r\n"
write flush

close
closed
